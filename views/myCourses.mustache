{{> partials/header}}

<div class="form-card">
  <h2>My Enrolled Courses</h2>

  {{#courses.length}}
    <div class="course-list">
      {{#courses}}
        <div class="course-card">
          <h3>{{name}}</h3>
          <p>{{description}}</p>

          <form method="POST" action="/courses/{{_id}}/unenrol/{{user._id}}" style="margin-top: 10px;">
            <button type="submit" class="btn btn-danger">Unenrol</button>
          </form>
        </div>
      {{/courses}}
    </div>
  {{/courses.length}}

  {{^courses.length}}
    <p>You are not enrolled in any courses yet.</p>
  {{/courses.length}}

  <a class="btn back-button" href="/dashboard">Back to Dashboard</a>
</div>

{{> partials/footer}}
