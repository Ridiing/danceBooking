{{> partials/header}}

<div class="form-card">
  <h2>My Courses</h2>

  {{#courses.length}}
    <div class="course-list">
      {{#courses}}
        <div class="course-card">
          <h3>{{name}} – £{{price}}</h3>
          <p>{{description}}</p>
          <p><strong>Duration:</strong> {{duration}}</p>

          <p><strong>Class Schedule:</strong></p>
          <ul>
            {{#classes}}
              <li>{{date}} at {{time}} – {{location}}</li>
            {{/classes}}
          </ul>

          <form method="POST" action="/unenrol/{{_id}}">
            <button type="submit" class="btn btn-danger">Unenrol</button>
          </form>
        </div>
      {{/courses}}
    </div>
  {{/courses.length}}

  {{^courses.length}}
    <p>You are not enrolled in any courses yet.</p>
  {{/courses.length}}

  <a class="btn" href="/dashboard">Back to Dashboard</a>
</div>

{{> partials/footer}}
