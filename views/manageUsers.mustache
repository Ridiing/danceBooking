{{> partials/header}}

<div class="dashboard-card">
  <h2>Manage Users</h2>

  {{#users.length}}
    <ul>
      {{#users}}
        <li>
          {{username}} - {{#isOrganiser}}Organiser{{/isOrganiser}}{{^isOrganiser}}User{{/isOrganiser}}

          {{^isOrganiser}}
          <form action="/make-organiser/{{_id}}" method="POST" style="display:inline;">
            <button type="submit">Make Organiser</button>
          </form>
          {{/isOrganiser}}

          <form action="/delete-user/{{_id}}" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </li>
      {{/users}}
    </ul>
  {{/users.length}}

  {{^users.length}}
    <p>No users found.</p>
  {{/users.length}}

  <a href="/dashboard" class="btn">Back to Dashboard</a>
</div>

{{> partials/footer}}



