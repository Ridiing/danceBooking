{{> partials/header}}

<div class="dashboard-card">
  <h2>Manage Users</h2>

  {{#users.length}}
    <table style="width:100%; text-align:left; margin-top:20px;">
      <thead>
        <tr>
          <th>Username</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#users}}
        <tr>
          <td>{{username}}</td>
          <td>{{role}}</td>
          <td>
            {{#isNotSelf}}
              {{^isOrganiser}}
                <form action="/make-organiser/{{_id}}" method="POST" style="display:inline;">
                  <button class="btn">Make Organiser</button>
                </form>
              {{/isOrganiser}}
              <form action="/delete-user/{{_id}}" method="POST" style="display:inline;">
                <button class="btn logout" onclick="return confirm('Delete this user?')">Delete</button>
              </form>
            {{/isNotSelf}}
          </td>
        </tr>
        {{/users}}
      </tbody>
    </table>
  {{/users.length}}

  {{^users.length}}
    <p>No users found.</p>
  {{/users.length}}

  <a href="/dashboard" class="btn">Back to Dashboard</a>
</div>

{{> partials/footer}}

