{{> partials/header}}

<div class="form-card">
  <h2>Participants for This Course</h2>

  <table class="user-table">
    <thead>
      <tr>
        <th>Username</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#users}}
        <tr>
          <td>{{username}}</td>
          <td>
            <form method="POST" action="/remove-participant/{{_id}}/{{courseId}}" style="display:inline;">
              <button type="submit" class="btn-danger">Remove</button>
            </form>
          </td>
        </tr>
      {{/users}}
    </tbody>
  </table>

  <a class="btn" href="/dashboard">Back to Dashboard</a>
</div>

{{> partials/footer}}
