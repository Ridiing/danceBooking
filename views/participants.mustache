{{> partials/header}}

<div class="form-card">
  <h2>Participants for This Course</h2>

  {{#users.length}}
    <ul>
      {{#users}}
        <li>
          {{username}}

          <!-- organiser‑only “remove” -->
          <form
            method="POST"
            action="/courses/{{courseId}}/unenrol/{{_id}}"
            style="display:inline;"
            onsubmit="return confirm('Remove this user from the course?')"
          >
            <button type="submit" class="btn btn-danger">Remove</button>
          </form>
        </li>
      {{/users}}
    </ul>
  {{/users.length}}

  {{^users.length}}
    <p>No participants yet.</p>
  {{/users.length}}

  <a href="/dashboard" class="btn">Back to Dashboard</a>
</div>

{{> partials/footer}}
