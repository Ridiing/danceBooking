{{> partials/header}}

<div class="form-card">
  <h2>Participants for This Course</h2>

  {{#users}}
    <ul>
      {{#users}}
        <li>
          {{username}}
          <form method="POST" action="/my-courses/unenrol/{{../courseId}}" style="display:inline;">
            <button type="submit" onclick="return confirm('Remove this user?')">Remove</button>
          </form>
        </li>
      {{/users}}
    </ul>
  {{/users}}

  {{^users}}
    <p>No participants yet.</p>
  {{/users}}

  <a href="/dashboard" class="btn">Back</a>
</div>

{{> partials/footer}}
