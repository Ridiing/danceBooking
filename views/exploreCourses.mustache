<div class="course-list">
  {{#courses}}
  <div class="course-card">
    <h3>{{name}} – £{{price}}</h3>
    <p>{{description}}</p>
    <p><strong>Duration:</strong> {{duration}}</p>
    <p><strong>Class Schedule:</strong></p>
    <ul>
      {{#schedule}}
      <li>{{date}} at {{time}} – {{location}}</li>
      {{/schedule}}
    </ul>
    <div class="actions">
      <a href="/participants/{{_id}}">View Participants</a> |
      <a href="/edit-course/{{_id}}">Edit</a> |
      <a href="/delete-course/{{_id}}">Delete</a>
    </div>
  </div>
  {{/courses}}
</div>
